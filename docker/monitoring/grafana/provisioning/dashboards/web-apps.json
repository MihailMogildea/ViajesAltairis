{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "Web App Health",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "targets": [{ "expr": "up{job=\"nextjs-webs\"}", "legendFormat": "{{instance}}", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "DOWN", "color": "red" } }, "type": "value" },
            { "options": { "1": { "text": "UP", "color": "green" } }, "type": "value" }
          ],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "green", "value": 1 }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none", "orientation": "horizontal" }
    },
    {
      "title": "Node.js Event Loop Lag (seconds)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_seconds{job=\"nextjs-webs\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "drawStyle": "line", "lineWidth": 1, "fillOpacity": 10 } } }
    },
    {
      "title": "Node.js Heap Used",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "nodejs_heap_size_used_bytes{job=\"nextjs-webs\"}",
          "legendFormat": "Used {{instance}}",
          "refId": "A"
        },
        {
          "expr": "nodejs_heap_size_total_bytes{job=\"nextjs-webs\"}",
          "legendFormat": "Total {{instance}}",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes", "custom": { "drawStyle": "line", "lineWidth": 1, "fillOpacity": 10 } } }
    },
    {
      "title": "Node.js External Memory",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "nodejs_external_memory_bytes{job=\"nextjs-webs\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes", "custom": { "drawStyle": "line", "lineWidth": 1, "fillOpacity": 10 } } }
    },
    {
      "title": "Node.js Active Handles",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "nodejs_active_handles_total{job=\"nextjs-webs\"}",
          "legendFormat": "Handles {{instance}}",
          "refId": "A"
        },
        {
          "expr": "nodejs_active_requests_total{job=\"nextjs-webs\"}",
          "legendFormat": "Requests {{instance}}",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "custom": { "drawStyle": "line", "lineWidth": 1, "fillOpacity": 10 } } }
    },
    {
      "title": "Node.js Process CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"nextjs-webs\"}[5m]) * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "custom": { "drawStyle": "line", "lineWidth": 1, "fillOpacity": 10 } } }
    },
    {
      "title": "Node.js Process Resident Memory",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"nextjs-webs\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes", "custom": { "drawStyle": "line", "lineWidth": 1, "fillOpacity": 10 } } }
    },
    {
      "title": "Node.js GC Duration",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "rate(nodejs_gc_duration_seconds_sum{job=\"nextjs-webs\"}[5m])",
          "legendFormat": "{{kind}} {{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "drawStyle": "line", "lineWidth": 1, "fillOpacity": 10 } } }
    }
  ],
  "schemaVersion": 39,
  "tags": ["nextjs", "web"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Web Apps (Next.js)",
  "uid": "altairis-web"
}
